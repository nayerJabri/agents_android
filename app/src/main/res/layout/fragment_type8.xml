<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/container"
    tools:context=".View.Fragments.Type8Fragment">

    <LinearLayout
        android:padding="20dp"
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="test"
            android:textColor="#000000"
            android:textSize="32dp"
            android:id="@+id/title"
            android:layout_marginBottom="30dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="100dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:text="بحث في دليل الهاتف "
                android:background="@color/colorborder"
                android:textColor="@color/colorApp"
                android:id="@+id/select"/>

            <EditText
                android:id="@+id/phone"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:hint="رقم الهاتف "
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="100dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:text="فحص السلفة  "
                android:background="@color/colorborder"
                android:textColor="@color/colorApp"
                android:id="@+id/fahs"/>
            <Spinner
                android:id="@+id/salafni"
                android:layout_height="wrap_content"
                android:layout_width="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:textSize="18sp"
                android:layout_alignBottom="@+id/txtVw"
                android:layout_toRightOf="@+id/txtVw" />
        </LinearLayout>

        <TextView
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="صنف العملة : ريال يمني"
            android:textColor="@color/itemtitle"/>
        <EditText
            android:id="@+id/ijamli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="إجمالي السعر  "
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:enabled="false"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="موافق "
            android:background="@color/colorborder"
            android:textColor="@color/colorApp"
            android:id="@+id/done"/>
    </LinearLayout>
</ScrollView>