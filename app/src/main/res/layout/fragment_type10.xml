<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/container"
    tools:context=".View.Fragments.Type10Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="test"
            android:textColor="#000000"
            android:textSize="32dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <gr.escsoft.michaelprimez.searchablespinner.SearchableSpinner
                    android:id="@+id/Exchanges"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="24dp"
                    android:gravity="right"
                    app:DoneSearchTintColor="@color/colorborder"
                    app:RevealEmptyText="عن طريق الوكيل"
                    app:RevealViewBackgroundColor="@color/colorborder"
                    app:SearchHintText="ابحث ..."
                    app:SearchViewBackgroundColor="@android:color/holo_orange_light"
                    app:ShowBorders="false"
                    app:SpinnerExpandHeight="190dp"
                    app:StartSearchTintColor="@android:color/white" />


                <gr.escsoft.michaelprimez.searchablespinner.SearchableSpinner
                    android:id="@+id/Currencies"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="05dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="24dp"
                    android:gravity="left"
                    app:DoneSearchTintColor="@color/colorborder"
                    app:RevealEmptyText="اختر العملة"
                    app:RevealViewBackgroundColor="@color/colorborder"
                    app:SearchHintText="ابحث ..."
                    app:SearchViewBackgroundColor="@android:color/holo_orange_light"
                    app:ShowBorders="false"
                    app:SpinnerExpandHeight="190dp"
                    app:StartSearchTintColor="@android:color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/NumCharge"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:hint="رقم الحمولة"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/mablagh"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="5dp"
                    android:hint="المبلغ"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="18sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint=" إسم المستلم "
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:singleLine="true"
                android:textAlignment="center"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint=" هاتف المستلم "
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:singleLine="true"
                android:textAlignment="center"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/morsalname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="إسم المرسل "
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:singleLine="true"
                android:textAlignment="center"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/morsalphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="هاتف المرسل "
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:singleLine="true"
                android:textAlignment="center"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/camera"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/colorborder"
                    android:text="التقاط صورة "
                    android:textColor="@color/colorApp" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    tools:src="@tools:sample/avatars"
                    tools:visibility="invisible" />

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:text="موافق "
                android:layout_marginBottom="100dp"
                android:background="@color/colorborder"
                android:textColor="@color/colorApp"
                android:id="@+id/done"/>



        </LinearLayout>

    </LinearLayout>

</ScrollView>